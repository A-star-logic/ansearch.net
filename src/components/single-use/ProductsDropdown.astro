---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import { Icon } from 'astro-icon/components';
import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from '@i18n/utilities';

type Product = CollectionEntry<'products'>;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

// Get all products for the current language
const allProducts = await getCollection(
  'products',
  (entry: Product) => entry.data.lang === lang,
);

// Sort by order
const products = allProducts.sort((a: Product, b: Product) => {
  const orderA = a.data.nav?.order ?? 999;
  const orderB = b.data.nav?.order ?? 999;
  return orderA - orderB;
});
---

<div class="products-dropdown">
  <button class="dropdown-trigger" id="products-trigger">
    {t.navbar.products}
    <Icon name="fa7-solid:chevron-down" class="chevron" />
  </button>
  <div class="dropdown-menu" id="products-menu">
    {
      products.map((product: Product) => (
        <a
          href={translatePath(`/products/${product.data.pageSlug}`)}
          class="dropdown-item"
        >
          {product.data.nav?.icon && (
            <Icon name={product.data.nav.icon} class="item-icon" />
          )}
          <div class="item-content">
            <span class="item-title">{product.data.nav?.title}</span>
            <span class="item-tagline">{product.data.tagline}</span>
          </div>
        </a>
      ))
    }
  </div>
</div>

<script>
  function initProductsDropdown() {
    const trigger = document.getElementById('products-trigger');
    const menu = document.getElementById('products-menu');

    if (!trigger || !menu) return;

    trigger.addEventListener('click', (e) => {
      e.stopPropagation();
      const isOpen = menu.classList.contains('open');

      // Close other dropdowns
      document.querySelectorAll('.dropdown-menu.open').forEach((el) => {
        if (el !== menu) el.classList.remove('open');
      });
      document.querySelectorAll('.dropdown-trigger.open').forEach((el) => {
        if (el !== trigger) el.classList.remove('open');
      });

      if (isOpen) {
        menu.classList.remove('open');
        trigger.classList.remove('open');
      } else {
        menu.classList.add('open');
        trigger.classList.add('open');
      }
    });

    document.addEventListener('click', (e) => {
      if (
        !trigger.contains(e.target as Node) &&
        !menu.contains(e.target as Node)
      ) {
        menu.classList.remove('open');
        trigger.classList.remove('open');
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        menu.classList.remove('open');
        trigger.classList.remove('open');
      }
    });
  }

  initProductsDropdown();
  document.addEventListener('astro:page-load', initProductsDropdown);
</script>

<style>
  @reference "tailwindcss";

  .products-dropdown {
    position: relative;
  }

  .dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    cursor: pointer;
    @apply p-2 md:p-4 rounded;

    &:hover {
      @apply text-amber-600;
    }

    .chevron {
      transition: transform 0.2s ease;
      @apply text-xs;
    }

    &.open .chevron {
      transform: rotate(180deg);
    }
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 280px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    @apply bg-white shadow-lg rounded-lg border border-stone-200 py-2 mt-1;

    &.open {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }

  .dropdown-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    @apply px-4 py-3 text-stone-700 hover:bg-stone-100;

    .item-icon {
      @apply text-amber-600 mt-1;
    }

    .item-content {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }

    .item-title {
      @apply font-medium text-stone-800;
    }

    .item-tagline {
      @apply text-sm text-stone-500;
    }

    &:hover .item-title {
      @apply text-amber-600;
    }
  }
</style>
