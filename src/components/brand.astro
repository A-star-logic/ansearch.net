---
interface Props {
  coloredBackground?: boolean;
}

const { coloredBackground } = Astro.props;
---

<div class="brand-container">
  <img src="/favicon.svg" alt="Logo" class="w-6 md:w-10" />
  <div class="brand">
    <div
      class="brand-name"
      class:list={[coloredBackground ? "!text-white" : ""]}
    >
      Ansearch
    </div>
    <div
      class="brand-subtitle"
      class:list={[coloredBackground ? "!text-white" : ""]}
    >
      An<em class:list={[coloredBackground ? "!text-white" : ""]}>[swer &]</em
      >Search
    </div>
  </div>
</div>

<style>
  @reference "tailwindcss";

  .brand-container {
    display: flex;
    align-items: center;
    width: max-content;
    @apply gap-2;
  }

  .brand {
    display: flex;
    flex-direction: column;
    align-items: start;

    .brand-name {
      line-height: 0.6 !important;
      font-weight: bold;
      @apply text-amber-600 text-lg md:text-3xl;
    }

    .brand-subtitle {
      @apply text-stone-500 text-xs md:text-sm;

      em {
        @apply text-stone-500 text-[0.625rem] md:text-xs;
      }
    }
  }
</style>
