---
import Brand from '@components/brand.astro';
import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from '@i18n/utilities';
import { Icon } from 'astro-icon/components';
import PostHog from '@components/single-use/posthog.astro';
const locale = Astro.currentLocale;
const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<html lang={locale}>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />
    <title>Ansearch</title>
    <link rel="icon" href="/favicon.svg" />
    <link href="/src/styles/global.css" rel="stylesheet" />
  </head>
  <body>
    <PostHog />
    <div class="centered">
      <div class="overlay">
        <Brand coloredBackground />
        <div class="intro">
          <h1>
            Travaillez plus efficacement, automatisez et restez organisé avec
            notre collègue IA
          </h1>
          <em>un "Perplexity" pour votre travail (et beaucoup plus)</em>
        </div>
        <div class="links">
          <a href={translatePath('/')}>
            Notre produit<Icon name="fa7-solid:arrow-right" />
          </a>
          <a
            rel="noopener noreferrer"
            target="_blank"
            href="https://cal.com/olivia-maraval-cal"
          >
            {translation.cta}
            <Icon name="fa7-solid:arrow-right" />
          </a>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  @reference "tailwindcss";

  .centered::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('../../images/mobile_banner.webp');
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    filter: brightness(0.45);
  }

  .centered {
    position: relative;
    height: 100%;
    display: flex;
  }

  .overlay {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 1;
    width: 100%;
    @apply text-white gap-8;
  }

  .intro {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    max-width: 30ch;
    @apply gap-1;

    h1 {
      @apply text-white text-lg;
    }

    p {
      @apply text-white text-sm;
    }

    em {
      @apply text-white text-xs;
    }
  }

  .links {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: stretch;
    width: 100%;
    max-width: 60ch;
    @apply gap-1 px-4;

    a {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      @apply bg-white p-2 rounded-lg text-amber-600 shadow-lg;
    }
  }
</style>
