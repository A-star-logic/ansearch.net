{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "css.customData": [".vscode/tailwind.json"],
  "eslint.validate": ["javascript", "typescript", "astro"],
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.turbo/*/**": true,
    "**/.coverage/*/**": true,
    "**/libs/*/**": true,
    "**/dist/*/**": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "eslint.config.js, .prettierignore, .prettierrc.js, .editorconfig, .yarnrc.yml, wrangler.jsonc, astro.config.ts, tailwind.config.ts, yarn.lock, .gitignore, tsconfig.json"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "cSpell.ignorePaths": [
    "package-lock.json",
    "package.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders"
  ],
  "cSpell.words": ["Ansearch"]
}
